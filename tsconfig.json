{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "release",
    "lib": [
      "es2015",
      "es2015.promise",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}